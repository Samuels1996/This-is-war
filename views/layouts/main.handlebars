            <a href="/login" id="login">Login</a>
          {{/if}}
        </nav>
      </header>
      <main>
        <a href="/fight" id="fight">test</a>
        <!-- Render the sub layout -->
        <h1 class="fantasy">THIS IS WAR</h1>
        {{{body}}}
      </main>
      <footer>

      </footer>
    </div>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src="/js/logout.js"></script>

    {{/if}}
