<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>This Is War</title>
    <link rel="stylesheet" type="text/css" href="/css/normalize.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
  </head>

  <body>
    <div>
      <header>
        <nav class="navbar navbar-expand-lg navbar-dark transparent-bar p-3">
          <a class="navbar-brand fantasy title-font" href="/">
            <img
              src="/imgs/thisiswar_logo.svg"
              width="30"
              height="30"
              alt="this is war logo"
              class="d-inline-block align-top"
            />
            THIS IS WAR!
          </a>
          <!-- Conditionally render login or logout links -->
          <audio src="/audio/thisiswaraudo.mp3" controls autoplay loop></audio>
                    </body>
          {{#if logged_in}}
            <a
              class="nav-item nav-link nav-links link-danger"
              href="/profile"
            >Profile</a>
            <a
              class="nav-item nav-link nav-links link-danger"
              href=""
              id="logout"
            >Logout</a>
          {{else}}

            <a class="nav-item nav-link nav-links link-danger font-family" href="/login" id="login">Login</a>
          {{/if}}
        </nav>
      </header>
      <main>
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
      <footer>

      </footer>
    </div>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src="/js/logout.js"></script>

    {{/if}}
  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"
  ></script>
</html>