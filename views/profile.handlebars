<div class="d-flex justify-content-center align-items-center col-12 text-center font-family">
  <div class="container-profile">
    <div>
      <h2>Welcome, {{username}}!</h2>
    </div>
  <div>
    <div>
      <div id="class-display"></div>
      <h3>Recruit a Champion:</h3>
      <form class="form new-champ-form">
        <div class="form-group justify-content-around row p-1">
          
          <div class="form-radio p-2">
            <input onclick='check_value(1)' type="radio" class="class-select" id="barbarian" name="class-select" value="barbarian">
            <label for="barbarian">Barbarian</label>

            <input onclick='check_value(2)' type="radio" class="class-select" id="archer" name="class-select" value="archer">
            <label for="archer">Archer</label>

            <input onclick='check_value(3)' type="radio" class="class-select" id="wizard" name="class-select" value="wizard">
            <label for="wizard">Wizard</label>
        </div>
        <div class = "item-shop p-2">
  <input list="item-shop" id="item-choice" name="item-choice" placeholder="Item Shop" />
        </div>
    <datalist id="item-shop">
        <option value="leather gloves">
        <option value="wooden sword">
        <option value="cloak">
        <option value="rum ham">
    </datalist>
          
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Recruit</button>
          <button class="btn btn-primary"><a href="/fight" id="fight">FIGHT</a></button>
        </div>
          
      </form>
    </div>
      <div class="champ-list">
        {{#if champion}}
        <h3>Champion: {{champion.class_name}}</h3>

          <div>
            <div>
              <h4>{{class_name}}</h4>
              <h4>HP: ({{champion.hitpoints}} + {{hp_boost}})</h4>
              <h4>Str: ({{champion.strength}} + {{str_boost}})</h4>
              <h4>Item: {{item_name}}</h4>
            </div>
            <div>
              <button
                class="btn btn-sm btn-danger"
                data-id="{{champion.id}}"
              >BANISH</button>
            </div>
          </div>
          {{/if}}
          <img class="group-image" src="/group-image.png">
      </div>
      
</div>

<script src="./js/profile.js"></script>